{
  "name": "Navigate To",
  "author": "Brandon Bakker",
  "version": "1.0",
  "description": "When highlighting a URL, you can now navigate to it via the right-click menu",
  "permissions": [
    "<all_urls>",
    "tabs",
    "contextMenus"
  ], 
  "background": {
    "scripts": ["navigate-to.bundle.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    { 
      "matches": ["<all_urls>"],
      "js": [ "content-script.bundle.js" ]
    }
  ],
  "icons": {
    "16": "img/nt-proto-white-16.png",
    "32": "img/nt-proto-white-32.png",
    "48": "img/nt-full-black-48.png",
    "128": "img/nt-full-black-128.png",
    "176": "img/nt-full-black-176.png"
  }
}
