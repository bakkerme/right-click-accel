{
  "name": "Navigate To",
  "author": "Brandon Bakker",
  "version": "1.0",
  "description": "When highlighting a URL, you can now navigate to it via the right-click menu",
  "permissions": [
    "<all_urls>",
    "tabs",
    "contextMenus"
  ], 
  "browser_action": {
    "default_title": "Navigate To",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["navigate-to.bundle.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    { 
      "matches": ["<all_urls>"],
      "js": [ "content-script.bundle.js" ]
    }
  ]
}
